<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button001_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button001"
        android:text="@string/click_here"
        android:textColor="#ff000000" />

    <Button
        android:id="@+id/button003_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button003"
        android:text="@string/click_here3"
        android:textColor="#ff000000" />
    <Button
        android:id="@+id/button002_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button002"
        android:text="@string/click_here2"
        android:textColor="#ff000000" />

    <GridView
        android:id="@id/main_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:horizontalSpacing="1.0dip"
        android:numColumns="4"
        android:padding="1.0dip"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0.5dp" />

</LinearLayout>